<Localizations>

	<Namespace Name="mvcForum.AddOns.Akismet">
		<Text Key="PageTitle">
			<Translation Language="en-GB"><![CDATA[Akismet MVC Forum add-on]]></Translation>
		</Text>
		<Text Key="Key">
			<Translation Language="en-GB"><![CDATA[Akismet API key:]]></Translation>
		</Text>
		<Text Key="Enabled">
			<Translation Language="en-GB"><![CDATA[Enabled:]]></Translation>
		</Text>
