@using mvcForum.Web.Helpers;
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="@Url.Content("~/content/css/bootstrap/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/content/css/bootstrap/bootstrap-responsive.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/content/css/bootstrap/additional.css")" rel="stylesheet">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>

  <body data-spy="scroll" data-target=".subnav" data-offset="50">
@Html.Partial("TopNavigation")
    <div class="container">
@RenderBody()
    </div>
	<script type="text/javascript" src="@Url.Action("getjson", "texts", new { area = "forumadmin" })"></script>
	<script id="customMessageTemplate" type="text/html">
	    <span class="help-inline" data-bind="validationMessage: field"></span>
	</script>
	<div id="confirm" class="modal hide" data-bind="css: { hide: Hidden }">
		<div class="modal-header">
			<button type="button" class="close" data-bind="click: Close">&times;</button>
			<h3 data-bind="text: Heading"></h3>
		</div>
		<div class="modal-body">
			<p data-bind="text: Body"></p>
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-bind="click: Cancel">Cancel</a>
			<a href="#" class="btn btn-primary" data-bind="click: Confirm">OK</a>
		</div>
	</div>
@if (ForumHelper.Debug) {
	<script type="text/javascript" src="@Url.Content("~/scripts/jquery-1.7.2.min.js")"></script>
	<script type="text/javascript" src="@Url.Content("~/scripts/knockout-2.1.0.js")"></script>
}
else {
	<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
	<script type="text/javascript" src="//ajax.aspnetcdn.com/ajax/knockout/knockout-2.1.0.js"></script>
}
	@RenderSection("scripts", false)
  </body>
</html>
