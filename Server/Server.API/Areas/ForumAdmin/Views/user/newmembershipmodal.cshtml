@{
	String ns = "MVCForum.ForumAdmin.User.Update";
}
	<div id="newgroup" class="modal hide" data-bind="css: { hide: AddHidden }">
		<div class="modal-header">
			<button type="button" class="close" data-bind="click: HideAdd">&times;</button>
			<h3>@Html.LocalizedString("CreateMembershipHeading", ns)</h3>
		</div>
		<!-- ko with: CreateModal -->
		<div class="modal-body">
			@using (Html.BeginForm("create", "user", new { area = "forumadmin", id = Model.Id })) {
				<fieldset>
					<legend class="hide"></legend>
					<div class="control-group" data-bind="css: { error: !GroupId.isValid() }">
						<label class="control-label" for="groupname">Group</label>
						<div class="controls">
							<select class="input-large" name="groupname" id="groupname" data-bind="options: GroupList, optionsCaption: 'Choose...', value: GroupId, optionsText: 'Name', optionsValue: 'Id'"></select>
						</div>
					</div>
				</fieldset>
			}
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-bind="click: $parent.HideAdd">@Html.LocalizedString("AddMembershipClose", ns)</a>
			<a href="#" class="btn btn-primary" data-bind="click: Create">@Html.LocalizedString("AddMembershipCreate", ns)</a>
		</div>
		<!-- /ko -->
	</div>
