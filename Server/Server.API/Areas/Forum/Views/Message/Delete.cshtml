@model mvcForum.Web.ViewModels.Delete.DeleteMessageViewModel
@using mvcForum.Web.Helpers;
@{
	ViewBag.Title = ForumHelper.GetString("Title", new { Subject = Model.Subject }, "mvcForum.Web.DeleteMessage");
	Layout = "~/areas/forum/views/shared/forumlayout.cshtml";
}
@Html.Partial("Breadcrumb", Model.Path)
<a name="start_here"></a>
<div id="page-body">
	<div id="content-start"></div>
	<h2>@Html.RouteLink(Model.Subject, "ShowTopic", new RouteValueDictionary { { "id", Model.TopicId }, { "title", Model.TopicTitle.ToSlug() } })</h2>
	@using (Html.BeginForm()) {
		@Html.HiddenFor(x => x.Id)
		@Html.ValidationSummary()
		<div class="panel" id="postingbox">
			<div class="block-border block-block">
				<div class="block-content">
					<h3>@ForumHelper.GetString("DeleteMessage", null, "mvcForum.Web.DeleteMessage")</h3>
					<fieldset class="fields1">
						<dl style="clear: left;">
							<dt>@Html.LabelFor(x => x.Delete)</dt>
							<dd>@Html.CheckBoxFor(x => x.Delete)</dd>
						</dl>
						<dl>
							<dt>@Html.LabelFor(x => x.Reason)</dt>
							<dd>@Html.TextAreaFor(x => x.Reason, new { @class = "inputbox", rows = 15, cols = 76 })</dd>
						</dl>
					</fieldset>
					<div class="block-footer"></div>
				</div>
			</div>
		</div>
		<div class="panel bg2">
			<div class="block-border block-block">
				<div class="block-content">
					<fieldset class="submit-buttons">
						<input type="submit" value="@ForumHelper.GetString("Submit", null, "mvcForum.Web.DeleteMessage")" class="button2" />
					</fieldset>
					<div class="block-footer">
					</div>
				</div>
			</div>
		</div>
 }
</div>
